{% extends 'base.html.twig' %}

{% block title %}Identifícate!
{% endblock %}


{% block body %}
	{# ESTILOS #}
	<style>
		form {
			background-color:rgba(33, 37, 41, 0.01);
			padding: 20px 0px;
			border-radius: 14px;
		}

		input {
			margin: 15px;
		}
	</style>

	{# ERRORES #}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	{# FORMULARIO #}
	<section class="c-container--center">
		<section class="c-container__formu">
			<form action="{{ path('app_login') }}" method="post">
			
				<div>
					<label for="username">Correo electrónico:</label>
					<input type="email" id="username" name="_username" value="{{ last_username }}">
				</div>
				
				<div>
					<label for="password">Contraseña:</label>
					<input type="password" id="password" name="_password">
				</div>

				{# LA URL A LA QUE IRÁ #}
				<input type="hidden" name="_target_path" value="/">

				<button type="submit" class="btn btn-primary">Iniciar sesión</button>
			</form>
			<a href="{{ url('registro') }}" >¿No estás registrado aún? <em>Crear cuenta</em></a>
		</section>
	</section>
{% endblock %}
