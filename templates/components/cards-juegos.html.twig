{# TOOS LOS JUEGOS EN UNA CARD #}
<div style="display:flex;flex-direction:row;flex-wrap:wrap;flex:1 1 100%; gap: 1.5rem; margin:5%;">
	{% for juego in juegos %}
		<a href="#" id="{{ 'juego_' ~ juego.id }}">
			<div class="card" style="width: 18rem;max-height:250px">
				<img class="card-img-top" src="{{asset('images/uploads/' ~ juego.img)}}" alt="{{ 'Imagen de ' ~ juego.nombre }}">
				<div class="card-body">
					<h5 class="card-title">{{juego.nombre}}</h5>
					<p
						class="card-text">
						<b>Tama√±o del tablero</b>:
						{{juego.tablero.ancho}}
						x
						{{juego.tablero.largo}}
						<br/>
						<b>Jugadores</b>:
						{{juego.jugadores.min}}
						-
						{{juego.jugadores.max}}
					</p>
				</div>
			</div>
		</a>
	{% endfor %}
</div>
