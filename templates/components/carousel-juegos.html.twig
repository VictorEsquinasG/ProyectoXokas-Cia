<article class="mt-5">

<div class="owl-features owl-carousel m-2">

	
	{% for juego in juegos %}
		<a href="#" id="{{'juego_' ~ juego.id}}" class="btn" style="background-color:#45E04D;">
			<div class="item">
				<img src="{{asset('/images/uploads/' ~ juego.img)}}" style="height:160px;" alt="">
				<div class="down-content">
					<h4>{{juego.nombre}}</h4>
					<p style="color:white">
						{{juego.desc}}
						<i class='fa fa-users'></i>
						{{juego.desc2}}
					</p>
				</div>
			</div>
		</a>
	{% endfor %}

</div>

</article>
