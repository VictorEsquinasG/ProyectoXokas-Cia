<section class="c-container__carousel">

	<div class="owl-features owl-carousel">

		<div class="btn" id="creaReserva" data="">
			<div class="item">
				<img src="assets/images/add.png" alt="">
				<div class="down-content">
					<h4>Hacer una reserva</h4>
					<i class="fa fa-link"></i>
				</div>
			</div>
		</div>

		{% for reserva in reservas %}
			<div class="btn" style="background-color:#32BEA6" id="ver_reserva_{{reserva.id}}">
				<div class="item">
					<img src="./images/uploads/{{reserva.img}}" alt="">
					<div class="down-content">
						<h4>{{reserva.title}}</h4>
						<i class="fa-regular fa-eye"></i>
					</div>
				</div>
			</div>
		{% endfor %}

	</div>

</section>
