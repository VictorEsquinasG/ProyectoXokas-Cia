<div class="c-container__carousel">

	<div class="owl-features owl-carousel">

		<a href="{{ url('make_reserva') }}" id="creaReserva">
			<div class="item">
				<img src="assets/images/add.png" alt="">
				<div class="down-content">
					<h4>Hacer una reserva</h4>
					<i class="fa fa-link"></i>
				</div>
			</div>
		</a>

		{% for reserva in reservas %}
			<a href="{{ url({{reserva.url}}) }}">
				<div class="item">
					<img src="/images/{{reserva.img}}" alt="">
					<div class="down-content">
						<h4>{{reserva.title}}</h4>
						<i class="fa-regular fa-eye"></i>
					</div>
				</div>
			</a>
		{% endfor %}

	</div>

</div>
